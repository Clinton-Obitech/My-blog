<%- include("partials/header") %>
<main id="create-blog">

<section class="create-form">

<form action="<%= editBlogs ? '/user/blog/update' : '/user/blog' %>" enctype="multipart/form-data" method="POST">
    <a href="/dashboard">View dashboard</a>
    <h2>Create blog</h2>
    <% if (locals.msg) { %>
        <p><%= msg %></p>
        <% } %>
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= editBlogs? editBlogs.title : '' %>">
    <label for="file">Image</label>
    <input type="file" name="image">

    <label for="content">Content</label>
    <textarea name="content"><%= editBlogs? editBlogs.content : '' %></textarea>
    <input type="submit" value="<%= editBlogs? 'Update' : 'Post' %>">
</form>
</section>

</main>